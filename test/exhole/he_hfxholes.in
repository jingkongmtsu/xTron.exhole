##############
# Example for multipoint hfx hole with multithreads
#############

%global_infor
multi_threads true
cpu_threads_number 2
main spjobs
%end

%molecule
0 1
He   0.  0.   0.0
%end

%basis
g3large
%end

%xcfunc
name  hf
%end

%scf
max_scf_cycles  50
%end

%molecule
0 1
He   0.  0.   0.0
%end

%basis
g3large
%end

%parameters
xcints.xcoper true
xcints.xcprop hfxhole
xcints.nsvalues 2
xcints.1point 0.1     
xcints.1atom 0
xcints.holefile he_hfxholes.sv
XCInts.XCHoleAvg.dumpBatchHoles true
%end

%xcfunc
name  M_BR94CORR_OPP_X3
%end

%scf
max_scf_cycles  1
%end

%xcints
grid_points  3 1
threshold   1.0e-12
npt_cpu_thread 2
DO_XC_ENERGY_PROFILE true
%end

